<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RatingBar android:id="@id/review_form_rating" android:layout_width="wrap_content" android:layout_height="wrap_content" android:numStars="5" android:stepSize="1.0" android:layout_alignParentRight="true" />
    <EditText android:id="@id/review_form_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="@string/review_form_title_hint" android:lines="1" android:layout_toLeftOf="@id/review_form_rating" android:layout_alignParentLeft="true" android:inputType="textCapSentences|textAutoCorrect" />
    <EditText android:gravity="top" android:id="@id/review_form_review" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/review_form_content_hint" android:minLines="7" android:singleLine="false" android:maxLength="@integer/max_review_length" android:layout_below="@id/review_form_title" android:inputType="textCapSentences|textAutoCorrect|textMultiLine" />
    <Button android:id="@id/review_form_submit" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/submit" android:layout_below="@id/review_form_review" android:layout_alignParentRight="true" />
    <Button android:id="@id/review_form_cancel" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cancel" android:layout_toLeftOf="@id/review_form_submit" android:layout_below="@id/review_form_review" />
</RelativeLayout>
